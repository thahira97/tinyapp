<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(username){ %>
    <form method="post" action="/logout">
      <label for="username "> <em>Logged in as: <%= username %> !</em></label>
      <!-- <input type ="text" name ="username" placeholder="Username" style="width: 150px; margin: 1em;border-radius: 10px 100px / 120px;"/> -->
      <button type="submit" class="btn btn-primary">Logout</button>
    </form>
    <% } else{ %>
    <form method="post" action="/login">
      <input
        type="text"
        name="username"
        placeholder=  "Username"
        style="
          width: 200px;
          height: auto;
          margin: 1em;
          padding: 5px;
          border-radius: 120px;
          box-shadow: 120px;
          ;
        "
      />
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <% } %>
  </nav>
</header>
